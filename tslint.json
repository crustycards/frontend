{
  "extends": "tslint:recommended",
  "rules": {
      "max-line-length": {
          "options": [120]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-console": {
          "severity": "warning",
          "options": [
              "debug",
              "info",
              "log",
              "time",
              "timeEnd",
              "trace"
          ]
      },
      "trailing-comma": [true, {
        "multiline": "never",
        "singleline": "never"
      }],
      "quotemark": [true, "single", "jsx-single"],
      "object-literal-sort-keys": false
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  },
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts"]
  }
}